{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-xs-3 col-xs-offset-4">

            <form class="form-signin" action="{{ url('app.security.login') }}" method="POST">
                <h2 class="form-signin-heading">{{ 'form.user.login.title' | trans({},'form') | capitalize }}</h2>

                <div class="form-group">
                    <label for="username">{{ 'form.user.username' | trans({},'form') | capitalize }}</label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></div>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="{{ 'form.user.username' | trans({},'form') | capitalize }}">
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-6 text-left">
                            <label for="password">{{ 'form.user.password' | trans({},'form') | capitalize }}</label>
                        </div>
                        <div class="col-xs-6 text-right">
                            <a href="{{ url('app.account.password.form') }}">{{ 'form.user.login.forgot' | trans({}, 'form') | capitalize }}</a>
                        </div>
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></div>
                        <input type="password" id="password" name="_password" class="form-control" placeholder="{{ 'form.user.password' | trans({},'form') | capitalize }}">
                    </div>
                </div>

                <button class="btn btn-primary btn-block" type="submit">{{ 'form.user.login.button' | trans({}, 'form') | capitalize }}</button>

            </form>

            {% if error %}
                <hr>
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

        </div>
    </div>


{% endblock %}