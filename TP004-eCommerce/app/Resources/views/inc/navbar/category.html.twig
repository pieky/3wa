{% for category in categories %}
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            {{ category.translations[currentLocal].name | capitalize }}
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li><a href="{{ url('app.category.index', { 'slug' : category.translations[currentLocal].slug }) }}">{{ category.translations[currentLocal].name | capitalize }}</a></li>
            <li role="separator" class="divider"></li>
            <li class="dropdown-header">{{ category.translations[currentLocal].name | capitalize }}</li>
            {% for subcategory in category.subcategories %}
                <li><a href="{{ url('app.subcategory.index', { 'category' : category.translations[currentLocal].slug, 'subcategory' : subcategory.translations[currentLocal].slug}) }}">{{ subcategory.translations[currentLocal].name | capitalize }}</a></li>
            {% endfor %}
        </ul>
    </li>
{% endfor %}