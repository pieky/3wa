{% extends 'base.html.twig' %}

{% block title %}Create Member - {{ firstName ~ ' - ' ~ lastName }} {% endblock %}

{% block body %}
    <div class="row">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <h5>New member created</h5>
            <div class="card-panel grey lighten-5 z-depth-5">
                <div class="row valign-wrapper">
                    <div class="col s3">
                        <img src="http://lorempixel.com/400/200/people/{{ countMember }}" width="100" class="materialboxed responsive-img circle" title="{{ firstName~'-'~lastName }}">
                    </div>
                    <div class="col s8">
                        <span class="black-text">
                            <div>{{ firstName | capitalize }}</div>
                            <div>{{ lastName | capitalize }}</div>
                            <div>{{ email}}</div>
                        </span>
                    </div>
                    <div class="col s2">
                        <a href="{{ url('app.members.index') }}" class="btn-floating btn-large waves-effect waves-light pulse"><i class="material-icons">home</i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
