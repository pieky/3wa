{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-xs-9 col-xs-offset-1">
            <div class="page-header">
                <h1>Admin <small>{{ 'admin.category.title' | trans() }}</small></h1>
            </div>

            <table class="table table-striped table-hover table-responsive table-condensed">
                <thead>
                <tr>
                    <th><a href="{{ url('app.admin.category.add') }}" class="btn btn-primary btn-xs"><i class="fa fa-plus" aria-hidden="true"></i></a></th>
                    <th class="text-center">Name</th>
                    <th class="text-center">isActive</th>
                    <th class="text-center">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <th>{{ category.id }}</th>
                        <td>{{ category.translations[currentLocal].name }}</td>
                        <td class="text-center">
                            {{ category.isActive ? '<span class="label label-success"><i class="fa fa-check" aria-hidden="true"></i>' : '<span class="label label-danger"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>' }}
                        </td>
                        <td class="text-center">
                            <a href="{{ url('app.admin.category.update', { 'id' : category.id }) }}" class="btn btn-warning btn-xs"><i class="fa fa-edit" aria-hidden="true"></i></a>
                            <a href="{{ url('app.admin.category.delete', { 'id' : category.id }) }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}