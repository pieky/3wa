{% extends 'base.html.twig' %}

{% block body %}

    {% if(app.user.id != user.id) %}
        <div class="alert alert-danger" role="alert">{{ 'operation.danger' | trans }}</div>
    {% endif %}

    {% if(app.user.id == user.id) %}
        <h2>{{ user.username | capitalize }}</h2>


        <div class="col-xs-12 col-sm-12">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <img src="http://lorempixel.com/400/200/sports/{{ user.username }}/" alt="" class="img-rounded img-responsive">
                    </div>
                    <div class="col-sm-6 col-md-8">
                        <h4><i class="fa fa-user" aria-hidden="true"></i> {{ user.username | capitalize }}</h4>
                        <p><i class="fa fa-envelope-o" aria-hidden="true"></i> {{ user.email }}</p>
                        <p><i class="fa fa-history" aria-hidden="true"></i> {{ user.lastConnection|localizeddate('medium', 'none', currentLocal) }}
                        </p>
                    </div>
                </div>
            </div>
        </div>

    {% endif %}
{% endblock %}