{% extends 'base.html.twig' %}

{% block body %}

    <h2>Admin - User list</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th><a href="{{ url('app.account.create') }}" class="btn btn-primary btn-xs"><i class="fa fa-plus" aria-hidden="true"></i></a></th>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                <th>isActive</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <th>{{ user.id }}</th>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}

                        <span class="label label-info">{{ role }}</span>

                    {% endfor %}
                </td>
                <td>
                    {% if user.isActive %}
                        <span class="label label-success"><i class="fa fa-check" aria-hidden="true"></i>
</span>
                    {% else %}
                        <span class="label label-danger"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
</span>
                    {% endif %}
                </td>
                <td>
                    <a href="#"
                       class="btn btn-info btn-xs user-detail-modal"
                       data-name="{{ user.username | capitalize }}"
                       data-email="{{ user.email }}"
                       data-toggle="modal"
                       data-target="#userModal">
                        <i class="fa fa-info" aria-hidden="true"></i>
                    </a>
                    <a href="{{ url('app.account.delete', {'id':user.id})}}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% include 'inc/modal/user.info.html.twig' %}
{% endblock %}