{% extends 'base.html.twig' %}

{% block title %}Member detail - {{ member.firstName ~ ' - ' ~ member.lastName }} {% endblock %}

{% block body %}
    <div class="row">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <div class="card-panel grey lighten-5 z-depth-5">
                <div class="row valign-wrapper">
                    <div class="col s3">
                        <img src="{{ asset(member.img ) }}" width="100" class="materialboxed responsive-img circle" alt="{{ member.img }}" title="{{ member.firstName~'-'~member.lastName }}">
                    </div>
                    <div class="col s7">
                        <span class="black-text">
                            <div><strong>{{ id | upper }}</strong></div>
                            <div>{{ member.firstName | capitalize }}</div>
                            <div>{{ member.lastName | capitalize }}</div>
                            <div>{{ member.email}}</div>
                        </span>
                    </div>
                    <div class="col s2">
                        <a href="{{ url('app.members.index') }}" class="btn-floating btn-large waves-effect waves-light pulse"><i class="material-icons">home</i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
