<table class="table table-striped table-hover table-responsive table-condensed">
    <thead>
        <tr>
            <th><a href="{{ url('app.account.create') }}" class="btn btn-primary btn-xs"><i class="fa fa-plus" aria-hidden="true"></i></a></th>
            <th class="text-center">Username</th>
            <th class="text-center">Email</th>
            <th class="text-center">Roles</th>
            <th class="text-center">isActive</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <th>{{ user.id }}</th>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            <td class="text-center">
                {% for role in user.roles %}

                    <span class="label label-info">{{ role }}</span>

                {% endfor %}
            </td>
            <td class="text-center">
                {{ user.isActive ? '<span class="label label-success"><i class="fa fa-check" aria-hidden="true"></i>' : '<span class="label label-danger"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>' }}
            </td>
            <td class="text-center">
                <a href="#"
                   class="btn btn-info btn-xs user-detail-modal"
                   data-name="{{ user.username | capitalize }}"
                   data-email="{{ user.email }}"
                   data-toggle="modal"
                   data-target="#userModal">
                    <i class="fa fa-info" aria-hidden="true"></i>
                </a>
                <a href="{{ url('app.account.delete', {'id':user.id})}}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% include 'inc/modal/user.info.html.twig' %}