{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-xs-9 col-xs-offset-1">
            <div class="page-header">
                <h1>Admin <small>{{ isNew ? 'form.category.add.title' | trans({}, 'form') | capitalize : 'form.category.update.title' | trans({}, 'form') | capitalize }}
                    </small></h1>
            </div>

            {{ form_start(form, { 'attr' : { 'novalidate' : 'novalidate' } })  }}
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                {% for lang in locales %}
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="#locale-{{ lang }}">
                            <h4 class="panel-title">
                                <a role="button" class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#locale-{{ lang }}" aria-expanded="true" aria-controls="collapseOne">
                                    {{ 'form.subcategory.field.name' | trans({},'form') | capitalize }} - {{ lang | upper }}
                                </a>
                            </h4>
                        </div>
                        <div id="locale-{{ lang }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="#locale-{{ lang }}">
                            <div class="panel-body">
                                {{ form_label(form.translations['name_'~lang], 'form.subcategory.name' | trans({}, 'form') | capitalize ) }}
                                {{ form_widget(form.translations['name_'~lang], { 'attr' : { 'placeholder' : 'form.subcategory.name' | trans({},'form') | capitalize }}) }}
                                {{ form_errors(form.translations['name_'~lang]) }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="text-right">
                <p>
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                    {{ form_errors(form.category) }}
                </p>
                <p>
                    <button type="submit" class="btn btn-success btn-sm">
                        {{ isNew ? 'form.subcategory.add.button' | trans({}, 'form') | capitalize : 'form.subcategory.update.button' | trans({}, 'form') | capitalize }}
                    </button>
                </p>
            </div>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}