{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-xs-5 col-xs-offset-3">

            <h2>{{ 'form.user.passwordReset.title' | trans({}, 'form') | capitalize }}</h2>

        </div>
    </div>

    <div class="row">
        <div class="col-xs-3 col-xs-offset-4">

            {{ form_start(form, { 'attr' : { 'novalidate' : 'novalidate' } })  }}

            <p>
                {{ form_label(form.email, 'form.user.email' | trans({}, 'form') | capitalize ) }}
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </p>
            <p>
                <button type="submit" class="btn btn-primary btn-block">{{ 'form.user.passwordReset.button' | trans({},'form') | capitalize }}</button>
            </p>

            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}